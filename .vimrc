"enable line number
set number

"enable syntax highighting
syntax enable

" enable auto-indendation
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

" show line and column in the status line
set ruler

" smarter searching
set ignorecase
set hlsearch
set smartcase
set incsearch

"automatically wrap lines
set wrap

" highlight brackets when hovwered over
set showmatch

" enable folding using zc, zo but start without it
set foldmethod=syntax
set foldlevelstart=99

set colorcolumn=72

"show final 
set list

" Colorschemes
color desert
set background=dark

" Configure backspace so it acts as it should act
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
